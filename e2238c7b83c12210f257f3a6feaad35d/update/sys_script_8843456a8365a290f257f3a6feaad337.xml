        <script><![CDATA[(function executeRule(current, gS) {
    // Step 1: Get the employee ID from the exit request
    var employeeId = current.employee_id;

    // Step 2: Query the centralized asset table for this employee
    var assetGR = new GlideRecord('x_1734342_pletra_0_centralized_asset_table');
    assetGR.addQuery('assigned_to', employeeId); // Assuming 'assigned_to' is the employee reference field
    assetGR.query();

    while (assetGR.next()) {
        // Step 3: For each asset, create a record in the asset return tracking table
        var returnTrack = new GlideRecord('x_1734342_pletra_0_asset_return_tracking_table');
        returnTrack.initialize();
        returnTrack.emp_id = employeeId;
        returnTrack.status = 'pending'; // Default        returnTrack.insert();
    }

})(current, gs);
]]></script>
